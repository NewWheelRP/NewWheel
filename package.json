{
	"name": "new-wheel-framework",
	"version": "0.0.1",
	"description": "A framework written in TypeScript for New Wheel Roleplay",
	"main": "index.js",
	"scripts": {
		"build": "pnpm run build:root && lerna run build",
		"build:root": "esbuild client/client.ts server/server.ts --bundle --platform=node --target=node16.9.1 --entry-names=[dir]/[hash].[name] --outdir=dist --define:process.env.NODE_ENV=\\\"production\\\"",
		"watch": "esbuild client/client.ts server/server.ts --bundle --watch --platform=node --target=node16.9.1 --entry-names=[dir]/[hash].[name] --outdir=dist --define:process.env.NODE_ENV=\\\"development\\\"",
		"bootstrap": "lerna bootstrap"
	},
	"author": "New Wheel",
	"license": "MIT",
	"dependencies": {
		"@nativewrappers/client": "^1.7.19",
		"esbuild": "^0.14.38",
		"lerna": "^4.0.0"
	},
	"devDependencies": {
		"@citizenfx/client": "2.0.5546-1",
		"@citizenfx/server": "2.0.5546-1",
		"@types/node": "^17.0.31",
		"typescript": "^4.5.2"
	}
}